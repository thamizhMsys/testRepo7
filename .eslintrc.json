{
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "jest": true,
    "es6": true
  },
  "extends": [ "airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "globals": {
    "require": true
  },
  "rules": {
    "no-param-reassign": 0,
    "arrow-parens": ["error", "as-needed"],
    "prettier/prettier": "error",
    "indent": 0,
    "max-len": [
      "error",
      {
        "code": 170
      }
    ],
    "linebreak-style": 0,
    "eol-last": 0,
    "prefer-destructuring": [
      "error",
      {
        "array": false,
        "object": false
      }
    ]
  }
}
